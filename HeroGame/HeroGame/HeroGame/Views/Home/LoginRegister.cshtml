@using HeroGame.Models;

@model UserInfoModel

@{
    ViewBag.Title = "About";
}
<br />
<br />
<form class="form-horizontal" action="@Url.Action("LoginRegister", "Home")" method="post">
    

    <div class="form-group text-center">

        <div class="">
            <div class="">
                @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name" })
                <div>
                    @Html.ValidationMessageFor(m => m.FirstName)
                </div>
            </div>
        </div>
        <div class="">
            <div class="">
                @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name" })
            </div>
            <div>
                @Html.ValidationMessageFor(m => m.LastName)
            </div>
        </div>
        <div class="">
            <div class="">
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })
            </div>
            <div>
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            @if(ViewBag.ErrorMessage != null)
            {
                <div>
                    @ViewBag.ErrorMessage;
                </div>
            }
        </div>
        <div class="">
            <div class="">
                @Html.TextBoxFor(m => m.Password, new { placeholder = "Password" })
            </div>
            <div>
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
    </div>
    <div class="text-center col-sm-2">
        <button class="btn btn-lg btn-success">Sign Up!</button>
    </div>
</form>


