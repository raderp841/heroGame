@using HeroGame.Models;
@model UserInfo_HeroModel
@{
    Dictionary<HeroModel, InventoryModel> heroes = Model.UsersHeroes;
    UserInfoModel user = Model.UsersInfo;
}


<br /><br />
<div id="heroList">
    @if (heroes.Count > 0)
    {
        <ul class="list-group">
            @foreach (var kvp in heroes)
            {
                <li class="list-group-item">
                    <h1>@kvp.Key.HeroName</h1>
                    <p>@kvp.Value.Coins</p>
                </li>
                <br />
            }
        </ul>
    }
</div>

<button id="newHero" class="btn btn-block btn-group-lg">Create a New Hero</button>

<div id="heroForm">
    <form class="form-horizontal" action="@Url.Action("Game", "Home", new { userId = Model.UsersInfo.Id })" method="post">
        <h1 class="text-center">New Hero</h1>
        <div class="form-group text-center">
            <div>
                Hero Name:<br />
                <input type="text" name="heroName" /><br /><br />
                Class: <br />
                <select name="className">
                    <option value="warrior">Warrior</option>
                    <option value="mage">Mage</option>
                    <option value="ranger">Ranger</option>
                </select>
            </div>
        </div>
        <button type="submit">Create Hero</button>
    </form>
</div>
